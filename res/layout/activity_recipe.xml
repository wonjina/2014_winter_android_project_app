<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texcher"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="Select Man"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btn_home"
            android:background="@drawable/imege_box"
            android:layout_margin="5dp"
            android:src="@android:drawable/ic_menu_revert" />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_weight="1"
        android:background="@drawable/out_line"
		android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

	    <LinearLayout
	        android:id="@+id/LinearLayout_recipe"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal" >
	
	    </LinearLayout>
    </HorizontalScrollView>
    <TextView android:id="@+id/textView2" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center" android:text="Select Thing" android:textAppearance="?android:attr/textAppearanceMedium"/>

   
        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_weight="12"
       	    android:background="@drawable/out_line"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >
        	 
		    <LinearLayout
		        android:id="@+id/LinearLayout_recipe2"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:gravity="center_horizontal"
		        android:orientation="vertical" >
              </LinearLayout>
              
        </ScrollView>
  
    


    <Button
        android:id="@+id/button_Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btn_search"
        android:background="@drawable/info_box"
        android:layout_margin="5dp"
        android:text="Search Recipe" />

</LinearLayout>